#!/usr/bin/env sh

test $(whoami) == "root" && echo "[ERROR] Do not run this script as root." && exit 1

session=$(loginctl show-session $(loginctl|grep $(whoami) | awk '{print $1}') -p Type | awk -F= '{print $2}' | grep "x11\|wayland")

case "$session" in
    "wayland")
        echo "[INFO] User $(whoami) is on $session"
        xauth gen $DISPLAY &> /dev/null

    ;;
    "x11")
        echo "[INFO] User $(whoami) is on $session"

    ;;
esac



echo "DISPLAY = $DISPLAY"

#pkexec '/usr/share/archlinux-tweak-tool/archlinux-tweak-tool.py'

pkexec '/mnt/shared/share/archlinux-tweak-tool/archlinux-tweak-tool.py'
